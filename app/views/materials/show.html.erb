<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Information</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @materials.each do |material| %>
	<tr>
	  <td><%= material.information %></td>

	<% if current_user.usertype == "Instructor" %>
		<td><%= link_to 'Edit', edit_material_path(material) %></td>
	<% end %>
	</br>
	</tr>
<% end %>
</tbody>
</table>

<% if current_user.usertype != "Student" %>
  <%= link_to 'New Material', {:controller => "materials", :action => "new", :course_id => @course} %>
<% end %>
<%= link_to 'Back', courses_path %>
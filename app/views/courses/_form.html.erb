<%= form_for(course) do |f| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :instructor %>
    <% if @users != nil %>
    <%= f.select :instructor , @users.map { |user| [user.name] } %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.radio_button :status, "Active" %>Active </br>
    <%= f.radio_button :status, "Inactive" %>Inactive
      
  </div>

  <div class="field">
    <%= f.label :startdate %>
    <%= f.date_select :startdate %>
  </div>

  <div class="field">
    <%= f.label :enddate %>
    <%= f.date_select :enddate %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
